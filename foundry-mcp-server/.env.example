# Environment variables for MCP Foundry Server
# Copy this file to .env and fill in your values

# Node environment
NODE_ENV=development

# Default RPC URL for local development
DEFAULT_RPC_URL=http://127.0.0.1:8545

# Default chain ID for Anvil
DEFAULT_CHAIN_ID=31337

# Private key for deployment (NEVER commit this!)
# Use Anvil's first default account for development
# PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Working directory for smart contracts
SC_DIR=./sc

# Working directory for web frontend
WEB_DIR=./web

# Auto-update frontend config after deployment
AUTO_UPDATE_CONFIG=true
